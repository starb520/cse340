<!-- content heading -->
<% if (title) { %>
    <h1><%= title %></h1>
<% } else { res.redirect('/') } %>

<!-- message block -->
<% if (message) { %>
    <p class="notice"><%= message %></p>
    <% } %>

<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
    <% }) %>
    </ul>
<% } %>

<form action="/client/account-update" method="post">
    <!-- first name -->
    <label for="client_firstname">First Name</label>
    <input type="text" name="client_firstname" id="client_firstname" required value="<%= client_firstname %>">

    <!-- last name -->
    <label for="client_lastname">Last Name</label>
    <input type="text" name="client_lastname" id="client_lastname" required value="<%= client_lastname %>">

    <!-- email -->
    <label for="client_email">Email Address:</label>
    <input type="email" id="client_email" name="client_email" required value="<%= client_email %>">

    <!-- register button -->
    <input id="submit" type="submit" value="Update Account">

    <!-- a hidden field so that the inv_id can be passed so updated info can be added to the database -->
    <input type="hidden" name="client_id"
        <% if(client_id) { %> value="<%= client_id %>" <% } %>>
</form>
    
<h1>Update Password</h1>
<form action="/client/password-update" method="post">

    <!-- password, 12 chars, 1 capital, 1 number, 1 special character -->
    <!-- <label  for="client_password">Password</label> -->
    <div id="passwordReqs">Password must contain at least 12 characters, 1 capital letter, 1 number, and 1 special character.</div>
    <input type="password" id="client_password" name="client_password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
    
    <!-- register button -->
    <input id="submit" type="submit" value="Update Password">

    <!-- a hidden field so that the inv_id can be passed so updated info can be added to the database -->
    <input type="hidden" name="client_id"
        <% if(client_id) { %> value="<%= client_id %>" <% } %>>
   
    <input type="hidden" name="client_firstname" value="<%= client_firstname %>">
    <input type="hidden" name="client_lastname" value="<%= client_lastname %>">
    <input type="hidden" name="client_email" value="<%= client_email %>">
    
</form>
